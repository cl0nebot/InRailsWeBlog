javascript:
  window.railsEnv = "#{Rails.env}";
  window.parameters = JSON.parse('#{raw CONFIG.to_json}');

  window.userLatitude = "#{@user_latitude}";
  window.userLongitutde = "#{@user_longitude}";

  window.defaultLocale = "#{I18n.default_locale}";
  window.locale = "#{I18n.locale}";

  var _paq = _paq || [];

- if current_user
  javascript:
    window.currentUserId = "#{current_user.id}";
    window.currentUserPseudo = "#{current_user.pseudo}";

= yield(:javascript)

