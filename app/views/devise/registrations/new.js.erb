var $signupModule = $("#signup_module");

if ($signupModule.length > 0) {
    $signupModule.openModal({
        dismissible: true,
        ready: function() { return $("#user_pseudo").focus(); }
    });
} else {
    $("body").prepend("<%= j(render 'signup_module') %>");
    $signupModule = $("#signup_module");

    $signupModule.openModal({
        dismissible: true,
        ready: function() { return $("#user_pseudo").focus(); }
    });
}
